<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/TitleStyle"
            android:text="产品信息" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/siv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_pname"
            style="@style/TextStyle"
            android:text="产品名称" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/TextStyle"
            android:text="¥ 188.0"
            android:textColor="@color/text_red"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_des"
            style="@style/TextStyle"
            android:text="描述"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_gray" >

            <TextView
                style="@style/TextStyle"
                android:text="选择数量"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ib_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_btn_minus_bg" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/anmout_text"
                android:hint="0"
                android:inputType="number"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/ib_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_btn_add_bg" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_gray" >

        <TextView
            android:id="@+id/tv_location"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="0dp"
            android:text="溯源信息"
            android:textColor="@drawable/selector_clickable_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_shopcart"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@drawable/selector_tv_shopcart_bg"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/tv_buy"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:background="@drawable/selector_tv_buy_bg"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/text_white" />
    </LinearLayout>

</RelativeLayout>