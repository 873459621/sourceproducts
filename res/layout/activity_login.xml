<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sourceproducts="http://schemas.android.com/apk/res/cn.edu.njupt.sourceproducts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="登录" />

    <cn.edu.njupt.sourceproducts.view.InputItemView
        android:id="@+id/iiv_username"
        sourceproducts:name="账户"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sourceproducts:hint="请输入会员帐号" />

    <cn.edu.njupt.sourceproducts.view.InputItemView
        android:id="@+id/iiv_password"
        sourceproducts:name="登录密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sourceproducts:hint="请输入密码"
        sourceproducts:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_btn_bg"
        android:text="登录"
        android:textColor="@color/text_white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_regist"
        style="@style/TextStyle"
        android:layout_gravity="center_horizontal"
        android:text="新用户注册"
        android:textColor="@drawable/selector_clickable_text"
        android:textSize="15sp" />

</LinearLayout>