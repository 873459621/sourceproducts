<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_red" >

        <TextView
            android:id="@+id/tv_personal"
            style="@style/TextStyle"
            android:drawableLeft="@drawable/ic_personal"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="登录/注册>"
            android:textColor="@color/text_white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我的订单"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_all_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="全部订单>"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/HLineStyle" />

    <LinearLayout
        android:id="@+id/ll_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_non_payment"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待付款"
            android:textColor="@drawable/selector_order_text" />

        <TextView
            android:id="@+id/tv_unfilled"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待发货"
            android:textColor="@drawable/selector_order_text" />

        <TextView
            android:id="@+id/tv_unrecrived"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待收货"
            android:textColor="@drawable/selector_order_text" />

        <TextView
            android:id="@+id/tv_unvalued"
            style="@style/TextStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待评价"
            android:textColor="@drawable/selector_order_text" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_gray" />

    <ListView
        android:id="@+id/lv_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>